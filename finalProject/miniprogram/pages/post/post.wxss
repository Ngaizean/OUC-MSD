.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  gap: 15px;
}

.form-group {
  display: flex;
  align-items: center;
  padding: 10px;
  width: 90%;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #fff;
}

.icon-button {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.icon {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}

.picker, .input {
  flex: 1;
  margin-left: 10px;
}

.publish-button {
  width: 100%;
  padding: 15px;
  background-color: #4caf50; /* 按钮背景颜色 */
  color: white;
  border: none;
  border-radius: 5px;
  font-weight: bold;
  text-align: center;
}

text
{
  margin-left: 11px;
}

.disclaimer {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.checkbox-label {
  font-size: 26rpx;
  color: #555;
  display: flex;
  align-items: center;
}