<view class="container">
  <view class="header">
    <image class="avatar" src="{{headpath}}" mode="aspectFit"></image>
    <text class="nickname">{{nickname}}</text>
  </view>
  <view class="menu">
    <view class="menu-item" bindtap="gotoNew" data-field="favorite">
      <image class="icon" src="cloud://test-7gils3dba8329fb3.7465-test-7gils3dba8329fb3-1328827207/星星_star.svg" mode="aspectFit"></image>
      <text class="menu-text">我的收藏</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="gotoNew" data-field="create">
      <image class="icon" src="cloud://test-7gils3dba8329fb3.7465-test-7gils3dba8329fb3-1328827207/添加_add-one.svg" mode="aspectFit"></image>
      <text class="menu-text">我的创建</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="gotoNew" data-field="record">
      <image class="icon" src="cloud://test-7gils3dba8329fb3.7465-test-7gils3dba8329fb3-1328827207/日志_log.svg" mode="aspectFit"></image>
      <text class="menu-text">我的记录</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="gotoInfo" data-field="safe">
      <image class="icon" src="cloud://test-7gils3dba8329fb3.7465-test-7gils3dba8329fb3-1328827207/保护_protect.svg" mode="aspectFit"></image>
      <text class="menu-text">安全须知</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="gotoInfo" data-field="aboutus">
      <image class="icon" src="cloud://test-7gils3dba8329fb3.7465-test-7gils3dba8329fb3-1328827207/人群_peoples-two.svg" mode="aspectFit"></image>
      <text class="menu-text">关于我们</text>
      <text class="arrow">></text>
    </view>
  </view>
</view>
