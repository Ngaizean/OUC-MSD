.cover-container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.enter-button {
  position: absolute;
  bottom: 15%; /* 调整按钮在页面底部的位置 */
  width: 90%; /* 增加按钮宽度 */
  height: 80rpx; /* 增加按钮高度 */
  background-color: rgba(56, 131, 255, 0.9); /* 更加饱和的背景色 */
  border-radius: 40rpx; /* 增大边框圆角 */
  text-align: center;
  line-height: 50rpx; /* 调整文本垂直居中 */
  font-size: 24px; /* 增加字体大小 */
  color: #ffffff; /* 修改字体颜色为白色 */
  font-weight: bold; /* 加粗字体 */
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.2); /* 添加阴影效果 */
  border: 2rpx solid #ffffff; /* 增加白色边框 */
}

